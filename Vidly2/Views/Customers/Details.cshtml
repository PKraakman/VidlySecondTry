@model Vidly2.Models.Customer

@{
    ViewBag.Title = "Details";
    // for easier typing 
    var customer = Model;
}

<h2>@customer.Name</h2>

<div>
    <ul>
        <li>Membership Type: @customer.MembershipType.Name</li>
        <li>Birth Date: @if (customer.Birthdate.HasValue) { @customer.Birthdate } else { <text>[unknown]</text> } </li>
    </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
