@model Vidly2.ViewModels.MoviesFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movie = Model.Movie;
}

@if (movie.Id == 0)
{
    <h2>New Movie</h2>
} else
{
    <h2>@movie.Name</h2>
}
    
<form method="post" action="/movies/save">
    @Html.HiddenFor(m => m.Movie.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres,"Id","Name"), new { @class="form-control"} )
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.QtyInStock)
        @Html.TextBoxFor(m => m.Movie.QtyInStock, new {@class = "form-control"} )
    </div>

    <button type="submit" class="btn btn-primary">Save</button>


</form>
