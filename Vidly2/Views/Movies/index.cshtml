@model Vidly2.ViewModels.MoviesIndexViewModel

<div>
    <h2>Movies</h2>
    
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name,"Details", new { Id = movie.Id }) </td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

